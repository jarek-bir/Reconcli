# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8

# Python files
[*.py]
indent_style = space
indent_size = 4
max_line_length = 88
trim_trailing_whitespace = true

# YAML files
[*.{yml,yaml}]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

# JSON files
[*.json]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

# Markdown files
[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

# Configuration files
[*.{toml,cfg,ini}]
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

# Shell scripts
[*.{sh,bash,zsh}]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

# Makefile
[Makefile]
indent_style = tab
trim_trailing_whitespace = true
